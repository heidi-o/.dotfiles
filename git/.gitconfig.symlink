[include]
  path = .dotfiles/secret/.gitconfig

[core]
  excludesfile = ~/.gitignore
  editor       = /usr/bin/vim

[alias]
  co    = checkout
  cl    = clone --recursive
  st    = status
  subup = submodule update --recursive --init
  puff  = pull --ff --ff-only
  hub   = !hub

[color]
  branch = auto
  diff   = auto
  status = auto
  ui     = true

[push]
  default = current
[user]
	name = nerdsRob
	email = robert@soundcloud.com
[merge]
	tool = vimdiff
